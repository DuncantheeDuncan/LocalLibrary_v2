extends layout

block content

  h1 Author: #{author.family_name}, #{author.first_name}
  p #{author.date_of_birth} - #{author.date_of_death}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      if authors_books !== null
        each book, i in  authors_books
          dt #{book.title}
          dd #{book.summary}
      else
        p This author has no books.

      hr

      p
        a(href='/catalog/author/'+author.id+'/delete') Delete author
      p
        a(href='/catalog/author/'+author.id+'/update') Update author


