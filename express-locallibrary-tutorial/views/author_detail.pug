extends layout

block content

  h1 Author: #{author.family_name}, #{author.first_name}
  p #{moment(author.date_of_death).format('DD MMM YYYY')} - #{moment(author.date_of_birth).format('DD MMM YYYY')}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      if authors_books !== null
        each book in  authors_books
          if book.title == null
            - break
          dt 
          a(href='/catalog/book/'+book.id) #{book.title}
          dd #{book.summary}
          if book.title == book.title
          - break
      else
        p This author has no books.

      hr

      p
        a(href='/catalog/author/'+author.id+'/delete') Delete author
      p
        a(href='/catalog/author/'+author.id+'/update') Update author

  